# Copy this file to .env and update values

# ===================
# App Settings
# ===================
PROJECT_NAME=EZ Calendar API
VERSION=1.0.0
DEBUG=true
API_V1_PREFIX=/api/v1

# ===================
# Security
# ===================
# 운영 환경에서는 반드시 변경하세요!
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ===================
# Database
# ===================
# 개발 환경
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ez_calendar
DATABASE_ECHO=false

# 운영 환경 (AWS RDS)
# DATABASE_URL=postgresql+asyncpg://user:password@your-rds-endpoint.rds.amazonaws.com:5432/ez_calendar

# ===================
# Redis
# ===================
# 개발 환경
REDIS_URL=redis://localhost:6379/0

# 운영 환경 (AWS ElastiCache)
# REDIS_URL=redis://your-elasticache-endpoint.cache.amazonaws.com:6379/0

# ===================
# CORS
# ===================
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# ===================
# AWS S3
# ===================
# 테스트용 (반드시 변경 필요)
AWS_ACCESS_KEY_ID=test-access-key
AWS_SECRET_ACCESS_KEY=test-secret-key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=ez-calendar-uploads-test

# Local development with MinIO (optional)
# AWS_S3_ENDPOINT_URL=http://localhost:9000

# ===================
# File Upload
# ===================
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=["image/jpeg","image/png","image/gif","image/webp"]

# ===================
# Pagination
# ===================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

